@model HelpDesk.Web.Models.UserDTO

@{
    ViewBag.Title = "SignupUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section  Styles{
    <link href="~/assets/css/datatables.bundle.css" rel="stylesheet" />
}
<div id="Upper_div" class="kt-container  kt-grid__item kt-grid__item--fluid mt-4">
    <div class="kt-portlet">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">Under Approval Tickets</h3>
            </div>
        </div>
        <div class="kt-portlet__body pt-0">
            <div class="table-responsive">
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                    <thead>
                        <tr>
                            <th>FullName</th>
                            <th>Mobile No</th>
                            <th>Email</th>
                            <th>Account Name</th>
                            <th>Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.UsersList != null)
                        {
                            foreach (var item in Model.UsersList)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Email</td>
                                    <td>@item.AccountName</td>
                                    <td>@item.CreatedOn</td>
                                    <td align="center">
                                        <a href="#" onclick="UserDetails(@item.UserId)">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="user_details" style="display:none;"></div>
@section  Scripts{
    <script src="~/assets/js/datatables.bundle.js"></script>

    <script>
        document.getElementById("loader").style.display = "none";
        var KTDatatablesBasicPaginations = function () {

            var initTable1 = function () {
                var table = $('#kt_table_1');

                // begin first table
                table.DataTable({
                    responsive: true
                });
            };

            return {

                //main function to initiate the module
                init: function () {
                    initTable1();
                },

            };

        }();

        jQuery(document).ready(function () {
            KTDatatablesBasicPaginations.init();
        });

        function UserDetails(id) {
            document.getElementById("loader").style.display = "block";
            $('#Upper_div').hide();

            $.ajax({
                type: "Post",
                url: '@Url.Action("UserDetails")',
                datatype: "json",
                data: { id: id },
                success: function (data) {
                    document.getElementById("loader").style.display = "none";
                    $('#user_details').show();
                    $('#user_details').html(data);
                },
                error: function () {
                    $('#user_details').html('');
                    document.getElementById("loader").style.display = "none";
                }
            });
        }
        function closeDetails() {
            $('#user_details').hide();
            $('#Upper_div').show();
        }

        function UserStatus(val) {
            document.getElementById("loader").style.display = "block";
            var userid = $('#hdnUserId').val();
            $.ajax({
                type: "Post",
                url: '@Url.Action("UpdateUserStatus")',
                datatype: "json",
                data: { id: val, userid: userid },
                success: function (data) {
                    document.getElementById("loader").style.display = "none";
                    var v = data.success;
                    if (v == true) {
                         
                        $('#anch_2').hide();
                        $('#anch_1').hide();

                        if (val == 1) {
                            $('#anchr_apr').show();
                        }
                        else if (val==2) {
                            $('#anchr_cncl').show();
                        }
                    }
                },
                error: function () {
                    document.getElementById("loader").style.display = "none";
                }
            });
        }

        function RemoveAccountProduct(val, type) {
            debugger
            document.getElementById("loader").style.display = "block";
            $.ajax({
                type: "Post",
                url: '@Url.Action("removeAccountOrProduct")',
                datatype: "json",
                data: { id: val, type: type },
                success: function (data) {
                    document.getElementById("loader").style.display = "none";
                    var v = data.success;
                    if (v == true) {
                        alert('Updated');
                        if (type == 2) {
                            $('#tr_' + val).hide();
                        }
                        else {
                              $('#tra_' + val).hide();
                        }
                    }
                },
                error: function () {
                    document.getElementById("loader").style.display = "none";
                }
            });
        }

           function RemoveAccountProduct(id,type) {
             $.ajax({
                type: "Post",
                url: '@Url.Action("removeAccountOrProduct")',
                datatype: "json",
                data: { id: id,type:type },
                success: function (data) {
                     var v = data.success;
                    if (v == true) {
                        document.getElementById("loader").style.display = "none";
                        var userid = $('#hdnUserId').val();
                        UserDetails(userid);
                    }
                    else {
                        document.getElementById("loader").style.display = "none";
                        alert('Some thing went wrong');
                    }
                },
                error: function () {
                    $('#userdetails').html('');
                    document.getElementById("loader").style.display = "none";
                }
            });
        }
          function AddProductDiv() {
            $('#AddNewProduct_tr').slideToggle("slow");
        }
         function AddProductsUP(id) {
          
            var ProductId = $('#ddlProductsUP').val();

            $.ajax({
                type: "Post",
                url: '@Url.Action("AddProducts")',
                datatype: "json",
                data: { id: id,ProductId:ProductId },
                success: function (data) {
                     var v = data.success;
                    if (v == true) {
                        document.getElementById("loader").style.display = "none";
                        var userid = $('#hdnUserId').val();
                        UserDetails(userid);
                    }
                    else {
                        document.getElementById("loader").style.display = "none";
                        alert('Some thing went wrong');
                    }
                },
                error: function () {
                    $('#userdetails').html('');
                    document.getElementById("loader").style.display = "none";
                }
            });
        }
    </script>

}