        function ViewDetails(id){
               $.ajax({
                type: "Post",
                url: '@Url.Action("UserDetails")',
                datatype: "json",
                data: { id: id },
                success: function (data) {
                    document.getElementById("loader").style.display = "none";
                    $('#userdetails').show();
                    $('#userdetails').html(data);
                    $('#div_upper').hide();
                },
                error: function () {
                    $('#userdetails').html('');
                    document.getElementById("loader").style.display = "none";
                }
            });
        }
