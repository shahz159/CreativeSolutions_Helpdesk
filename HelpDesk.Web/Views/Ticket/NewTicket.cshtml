                    }
                    district1 = district1 + '</select>';
                    $('#ddlProduct').html(district1);


                    document.getElementById("loader").style.display = "none";
                },
                error: function (ex) {
                    document.getElementById("loader").style.display = "none";
                    alert('Failed to retrieve products.' + ex);
                }
            });
            return false;
        }
